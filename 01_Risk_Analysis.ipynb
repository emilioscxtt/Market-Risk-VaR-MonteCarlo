import numpy as np
import pandas as pd
import yfinance as yf
import matplotlib.pyplot as plt
import seaborn as sns
from scipy.stats import norm

# --- 1. CONFIGURACIÓN Y DESCARGA DE DATOS ---
# Usamos acciones líquidas del IPC (México)
tickers = ['WALMEX.MX', 'CEMEXCPO.MX', 'AMX.MX', 'GFNORTEO.MX']
weights = np.array([0.25, 0.25, 0.25, 0.25]) # Portafolio equiponderado
start_date = '2022-01-01'
end_date = '2025-01-01'

print(f"Descargando datos para: {tickers}...")
data = yf.download(tickers, start=start_date, end=end_date)['Adj Close']

# Calculamos retornos logarítmicos (mejores para series temporales)
log_returns = np.log(data / data.shift(1)).dropna()

# --- 2. CÁLCULO DE MÉTRICAS DEL PORTAFOLIO ---
# Matriz de Covarianza (El corazón del riesgo paramétrico)
cov_matrix = log_returns.cov() * 252 # Anualizada
avg_returns = log_returns.mean() * 252 # Anualizados

# Retorno y Volatilidad esperada del portafolio
port_return = np.sum(weights * avg_returns)
port_volatility = np.sqrt(np.dot(weights.T, np.dot(cov_matrix, weights)))

print(f"\n--- PERFIL DEL PORTAFOLIO ---")
print(f"Retorno Esperado (Anual): {port_return:.2%}")
print(f"Volatilidad (Riesgo): {port_volatility:.2%}")

# --- 3. MODELO 1: VaR PARAMÉTRICO (Dist. Normal) ---
# Asumimos que los retornos siguen una campana de Gauss
conf_level = 0.95
inversion = 1000000 # 1 Millón de MXN

# Z-score para 95% (-1.65 desviaciones estándar)
z_score = norm.ppf(1 - conf_level) 
var_parametric_pct = port_return/252 - (port_volatility/np.sqrt(252)) * abs(z_score) 
# Nota: Ajustamos a diario dividiendo por sqrt(252) la volatilidad

var_parametric_value = inversion * var_parametric_pct
print(f"\nVaR Paramétrico (95% 1-Día): ${abs(var_parametric_value):,.2f} MXN")

# --- 4. MODELO 2: VaR HISTÓRICO (Realidad Empírica) ---
# Simulamos cuánto hubiera ganado/perdido el portafolio cada día del pasado
historical_returns = (log_returns * weights).sum(axis=1)
var_historical_pct = np.percentile(historical_returns, (1 - conf_level) * 100)
var_historical_value = inversion * var_historical_pct

print(f"VaR Histórico (95% 1-Día): ${abs(var_historical_value):,.2f} MXN")

# --- 5. MODELO 3: SIMULACIÓN MONTE CARLO (El "Heavy Hitter") ---
# Simulamos 10,000 futuros posibles usando Movimiento Browniano Geométrico
simulations = 10000
days = 252 # Un año proyectado

# Cholesky Decomposition (para mantener la correlación entre acciones)
L = np.linalg.cholesky(cov_matrix / 252) # Diario
daily_returns_sim = np.zeros((days, simulations))

# Simulamos día a día
current_price = inversion
portfolio_sims = np.zeros((days, simulations))

for t in range(days):
    # Ruido aleatorio correlacionado
    Z = np.random.normal(size=(len(tickers), simulations))
    correlated_Z = L.dot(Z) # Aplicamos la correlación
    
    # Retorno diario simulado para el portafolio global
    daily_return = np.dot(weights, correlated_Z) 
    portfolio_sims[t, :] = daily_return

# Sumamos los retornos para ver el acumulado al día 1
# (Para comparar con VaR de 1 día, tomamos la primera fila de la simulación)
simulated_day1_returns = portfolio_sims[0, :]
var_montecarlo_pct = np.percentile(simulated_day1_returns, (1 - conf_level) * 100)
var_montecarlo_value = inversion * var_montecarlo_pct

print(f"VaR Monte Carlo (95% 1-Día): ${abs(var_montecarlo_value):,.2f} MXN")

# --- 6. VISUALIZACIÓN PROFESIONAL ---
plt.figure(figsize=(10, 6))
plt.style.use('dark_background') # Estilo Quant

# Histograma de los retornos simulados
sns.histplot(simulated_day1_returns, bins=50, kde=True, color='cyan', stat='density', alpha=0.6)

# Líneas de VaR
plt.axvline(var_parametric_pct, color='red', linestyle='--', label=f'VaR Paramétrico: {var_parametric_pct:.2%}')
plt.axvline(var_historical_pct, color='yellow', linestyle='--', label=f'VaR Histórico: {var_historical_pct:.2%}')
plt.axvline(var_montecarlo_pct, color='magenta', linestyle='-', linewidth=2, label=f'VaR Monte Carlo: {var_montecarlo_pct:.2%}')

plt.title(f'Distribución de Riesgo: Comparación de Modelos VaR (Portafolio MX)', fontsize=14)
plt.xlabel('Retorno Diario Estimado')
plt.ylabel('Frecuencia (Probabilidad)')
plt.legend()
plt.grid(True, alpha=0.2)

plt.show()
